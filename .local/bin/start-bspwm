#!/bin/sh

pgrep -x sxhkd   > /dev/null || sxhkd &
pgrep -x polybar > /dev/null || polybar status &
pgrep -x picom   > /dev/null || picom -bcf &
pgrep -x feh     > /dev/null || feh --no-fehbg --bg-fill $HOME/.local/share/wallpaper &
pgrep -x mpd     > /dev/null || mpd &
setxkbmap be && setxkbmap -option "caps:swapescape"
