#!/usr/bin/env bash

DB="$HOME/.local/share/links"

fail () { dunstify 'Failed to add bookmark !'; exit; }
add () { echo "$1,$2" >> "$DB"; sort -o "$DB" "$DB"; }
succeed () { dunstify 'Bookmark added !'; }

name="$(rofi -dmenu)"
[[ ! -z "$name" ]] && link="$(rofi -dmenu)" || fail
[[ ! -z "$link" ]] && add "$name" "$link" && succeed || fail
