#!/usr/bin/env bash

DIR="$HOME/.local/share/slipbox"
TERM='/usr/bin/x-terminal-emulator'
EDITOR='/usr/bin/nvim'

[[ -d "$DIR" ]] && mkdir -p "$DIR"

function add_note () {
	parent=$(find "$DIR" -type d | sed 's/^\/home\/.*\/.local\/share\/slipbox//g;/^$/d' | rofi -dmenu -p 'Parent note');
	name=$(rofi -dmenu -p 'Note name');
	[[ ! -z "$name" ]] && $TERM -e $EDITOR "$DIR/$parent/$name.md";
}

function edit_note () {
	list=$(find "$DIR" -type f -name '*.md' | sed 's/\.md$//g;/^$/d;s/^\/home\/.*\/.local\/share\/slipbox\///g');
	name=$(echo "$list" | rofi -dmenu -p 'Note to edit');
	[[ ! -z "$name" ]] && $TERM -e $EDITOR "$DIR/$name.md";
}

case "$1" in
	add)
		add_note
		;;
	edit)
		edit_note
		;;
	*)
		notify-send "Couldn't process command !"
		;;
esac
