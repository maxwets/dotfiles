# START PROGRAMS

super + Return
	$TERM

super + shift + Return
	$BROWSER

super + @space
	$LAUNCHER -show drun -show-icons

super + shift + @space
	$TERM -e fx

super + shift + r
	bspc wm -r; \
	pkill -USR1 -x sxhkd

super + p
	maim --select | xclip -selection clipboard -t image/png

super + shift + p
	maim --select ~/pics/screenshot_$(date +"%Y:%m:%d-%H:%M:%S").png

super + shift + Escape
	betterlockscreen -l dim

super + q
	bspc node -c

## WINDOW MANAGEMENT

super + m
	bspc desktop -l next

super + g
	bspc node -s biggest.local

