# verbosity
alias \
	cp='cp -iv' \
	mv='mv -iv' \
	rm='rm -vI' \
	mkdir='mkdir -pv';

# colors
alias \
	ls='ls -hNSv -1 --color=auto --group-directories-first --classify' \
	grep='grep --color=auto' \
	diff='diff --color=auto' \
	ip='ip -color=auto' \
	tshark='tshark --color';

# security
alias \
	chmod='chmod --preserve-root' \
	chown='chown --preserve-root' \
	rm='rm --preserve-root';

# convenience
alias \
	cd..='cd ..' \
	la='ls -lA' \
	ll='ls -l' \
	clip="xclip -selection 'clip'" \
	less="$PAGER" \
	rsync='rsync -ahv --info=progress2';

# xdg-cleaning
alias \
	mitmproxy='mitmproxy --set confdir=$XDG_CONFIG_HOME/mitmproxy' \
	mitmweb='mitmweb --set confdir=$XDG_CONFIG_HOME/mitmproxy' \
	irssi="irssi --config=$XDG_CONFIG_HOME/irssi/config --home=$XDG_DATA_HOME/irssi" \
	wget='wget --hsts-file=$XDG_DATA_HOME/wget-hsts';

