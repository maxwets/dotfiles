set $mod Mod4
set $alt Mod1
set $launcher rofi
set $terminal alacritty
set $browser firefox
floating_modifier $mod
font pango:monospace 14
workspace_layout stacking

gaps inner 5
gaps outer 0
smart_gaps on
smart_borders on
hide_edge_borders smart
floating_maximum_size -1 x -1
for_window [class="floating_window"] floating enable
focus_follows_mouse yes

client.focused          #665c54 #665c54 #eddbb2 #2e9ef4   #665c54
client.focused_inactive #282828 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #3c3836 #3c3836 #a89984 #292d2e   #222222
client.urgent           #cc241d #cc241d #ebdbb2 #cc241d   #cc241d
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

workspace 1  output DP-1-8 eDP-1
workspace 2  output DP-1-8 eDP-1
workspace 3  output DP-1-8 eDP-1
workspace 4  output DP-1-8 eDP-1
workspace 5  output DP-1-8 eDP-1
workspace 6  output DP-1-9 eDP-1
workspace 7  output DP-1-9 eDP-1
workspace 8  output DP-1-9 eDP-1
workspace 9  output DP-1-9 eDP-1
workspace 10 output DP-1-9 eDP-1

exec_always feh --no-fehbg --bg-fill ~/.local/share/wallpaper
exec_always picom -bcf
exec_always setxkbmap -option "caps:swapescape"
exec_always nm-applet
exec_always ~/.local/bin/polystart
exec_always xss-lock -- ~/.local/bin/lock

bindsym $mod+Return       exec $terminal -e zsh
bindsym $mod+Shift+Return exec $browser
bindsym $mod+space        exec $launcher -show-icons -show drun
bindsym $mod+Shift+space  exec thunar
bindsym $mod+Escape       exec ~/.local/bin/lock
bindsym $mod+Shift+Escape exec pkill -15 Xorg
bindsym $mod+BackSpace    exec $terminal -e cfiles

bindsym $mod+f         fullscreen toggle
bindsym $mod+Shift+f   floating   toggle
bindsym $mod+Shift+r   restart
bindsym $mod+q [con_id="__focused__" instance="^(?!dropdown_).*$"] kill

bindsym XF86AudioLowerVolume  exec "amixer -q sset Master,0 5%-"
bindsym XF86AudioMute         exec "amixer -q sset Master toggle"
bindsym XF86AudioBack         exec mpc next
bindsym XF86AudioForward      exec mpc prev
bindsym XF86AudioPlay         exec mpc toggle
bindsym XF86AudioRaiseVolume  exec "amixer -q sset Master,0 5%+"
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp   exec brightnessctl set 5%+
bindsym XF86Calculator        exec xcalc
bindsym XF86HomePage          exec thunar
bindsym XF86Mail              exec $browser --new-window https://mail.google.com/
bindsym XF86Tools             exec $terminal -e /usr/bin/ncmpcpp

bindsym $mod+F1 exec xrandr --output eDP-1 --primary --mode 1920x1080
bindsym $mod+F2 exec xrandr --output eDP-1 --off --output DP-1-8 --primary --mode 1920x1080 --output DP-1-9 --mode 1920x1080 --right-of DP-1-8
bindsym $mod+a  exec $terminal -e pulsemixer --color 1
bindsym $mod+d  exec $browser --new-window https://discord.com/channels/@me
bindsym $mod+m  exec arandr
bindsym $mod+n  exec $terminal -e nmtui
bindsym $mod+u  exec keepassxc ~/.local/share/vault

bindsym $mod+b       exec ~/.local/bin/bookmarks
bindsym $mod+Shift+b exec ~/.local/bin/add-bookmark
bindsym $mod+e       exec ~/.local/bin/insert-emoji
bindsym $mod+Shift+t exec ~/.local/bin/mansplain
bindsym $mod+s       exec ~/.local/bin/slipbox add
bindsym $mod+Shift+s exec ~/.local/bin/slipbox edit
bindsym $mod+p       exec maim --select | xclip -selection clipboard -t image/png
bindsym $mod+Shift+p exec maim --select ~/Pictures/screenshot_$(date +"%Y-%m-%d_%H-%M-%S").png

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move container left
bindsym $mod+Shift+j move container down
bindsym $mod+Shift+k move container up
bindsym $mod+Shift+l move container right

bindsym $mod+Shift+g move scratchpad
bindsym $mod+g       scratchpad show

bindsym $mod+ampersand  workspace 1
bindsym $mod+eacute     workspace 2
bindsym $mod+quotedbl   workspace 3
bindsym $mod+apostrophe workspace 4
bindsym $mod+parenleft  workspace 5
bindsym $mod+section    workspace 6
bindsym $mod+egrave     workspace 7
bindsym $mod+exclam     workspace 8
bindsym $mod+ccedilla   workspace 9
bindsym $mod+agrave     workspace 10
bindsym $mod+Tab        workspace next
bindsym $mod+Shift+Tab  workspace prev

bindsym $mod+Shift+ampersand  move container to workspace 1
bindsym $mod+Shift+eacute     move container to workspace 2
bindsym $mod+Shift+quotedbl   move container to workspace 3
bindsym $mod+Shift+apostrophe move container to workspace 4
bindsym $mod+Shift+parenleft  move container to workspace 5
bindsym $mod+Shift+section    move container to workspace 6
bindsym $mod+Shift+egrave     move container to workspace 7
bindsym $mod+Shift+exclam     move container to workspace 8
bindsym $mod+Shift+ccedilla   move container to workspace 9
bindsym $mod+Shift+agrave     move container to workspace 10

mode "resize" {
        bindsym h resize shrink width  10 px
        bindsym j resize grow   height 10 px
        bindsym k resize shrink height 10 px
        bindsym l resize grow   width  10 px
        bindsym Return mode "default"
        bindsym Escape mode "default"
		bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

