set $mod Mod4
set $alt Mod1
floating_modifier $mod

client.focused          #665c54 #665c54 #eddbb2 #2e9ef4   #665c54
client.focused_inactive #282828 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #3c3836 #3c3836 #a89984 #292d2e   #222222
client.urgent           #cc241d #cc241d #ebdbb2 #cc241d   #cc241d
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

workspace 1  output DP-1-8
workspace 2  output DP-1-8
workspace 1  output DP-1-8
workspace 4  output DP-1-8
workspace 5  output DP-1-8
workspace 6  output DP-1-9
workspace 7  output DP-1-9
workspace 8  output DP-1-9
workspace 9  output DP-1-9
workspace 10 output DP-1-9

font pango:monospace 18

#exec_always --no-startup-id /usr/bin/feh --no-fehbg --bg-fill ~/.local/share/wallpaper
exec_always --no-startup-id /usr/bin/picom -bcf
exec_always --no-startup-id /usr/bin/setxkbmap -option "caps:swapescape"
exec_always --no-startup-id /usr/bin/nm-applet

gaps inner 5
gaps outer 0
smart_gaps on
hide_edge_borders smart
floating_maximum_size -1 x -1
for_window [class="floating_window"] floating enable
focus_follows_mouse yes

bindsym $mod+Return  exec --no-startup-id /usr/bin/x-terminal-emulator
Bindsym $mod+space   exec --no-startup-id /usr/bin/rofi -show-icons -show drun
bindsym $mod+o       exec --no-startup-id /usr/bin/rofi -show-icons -show window
bindsym $mod+p       exec --no-startup-id /usr/bin/maim --select | xclip -selection clipboard -t image/png
bindsym $mod+Shift+p exec --no-startup-id /usr/bin/maim --select ~/pics/screenshot_$(date +"%Y-%m-%d_%H-%M-%S").png
bindsym $mod+n       exec --no-startup-id /usr/bin/nautilus --new-window
bindsym $mod+m       exec --no-startup-id /usr/bin/x-terminal-emulator -e /usr/bin/neomutt 
bindsym $mod+z       exec --no-startup-id /usr/bin/x-terminal-emulator -e /usr/bin/weechat
bindsym $mod+s       exec --no-startup-id /usr/bin/regolith-control-center --class=floating_window

bindsym $mod+f         fullscreen toggle
bindsym $mod+Shift+f   floating   toggle
bindsym $mod+BackSpace split      toggle
bindsym $mod+q [con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+r   restart

bindsym $mod+Shift+space  exec --no-startup-id /usr/bin/x-terminal-emulator -e /usr/local/bin/fx
bindsym $mod+Shift+Escape exec --no-startup-id /usr/bin/betterlockscreen -l dim
bindsym $mod+Shift+Return exec --no-startup-id /usr/bin/x-www-browser

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+ampersand  workspace 1
bindsym $mod+eacute     workspace 2
bindsym $mod+quotedbl   workspace 3
bindsym $mod+apostrophe workspace 4
bindsym $mod+parenleft  workspace 5
bindsym $mod+section    workspace 6
bindsym $mod+egrave     workspace 7
bindsym $mod+exclam     workspace 8
bindsym $mod+ccedilla   workspace 9
bindsym $mod+agrave     workspace 10
bindsym $mod+Tab        workspace next
bindsym $mod+Shift+Tab  workspace previous

bindsym $mod+Shift+ampersand  move container to workspace 1
bindsym $mod+Shift+eacute 	  move container to workspace 2
bindsym $mod+Shift+quotedbl   move container to workspace 3
bindsym $mod+Shift+apostrophe move container to workspace 4
bindsym $mod+Shift+parenleft  move container to workspace 5
bindsym $mod+Shift+section	  move container to workspace 6
bindsym $mod+Shift+egrave     move container to workspace 7
bindsym $mod+Shift+exclam     move container to workspace 8
bindsym $mod+Shift+ccedilla   move container to workspace 9
bindsym $mod+Shift+agrave     move container to workspace 10

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
		bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
